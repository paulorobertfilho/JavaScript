<%- include('header') %>
    <h2>
        Editar vaga:
        <a href="/admin/vagas">Vagas</a>
    </h2>
    <div>
        <form method="POST" action="">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" id="titulo" value="<%= vaga.titulo %>">
            <br/>
            <label for="descricao">Descricao</label>
            <textarea name="descricao" id="descricao" cols="30" rows="10"><%= vaga.descricao %></textarea>
            <br/>
            <label for="categoria">Categoria</label>
            <select name="categoria" id="categoria">
                <% categorias.forEach( categoria => { %>
                <option value="<%= vaga.id %>" <% if(categoria.id == vaga.categoria){ %>selected<% }%>><%= categoria.categoria %></option>
                <% }) %>
            </select>
            <br/>
            <button type="submit">Salvar</button>
        </form>
    </div>
<%- include('footer') %>
